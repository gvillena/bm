{
  "name": "@bm/validation",
  "version": "0.1.0",
  "description": "Shared runtime validation schemas and DTO contracts for Beneficio Mutuo.",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "typecheck": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "test": "vitest run --coverage",
    "gen:openapi": "tsx src/openapi/index.ts > openapi.json",
    "gen:jsonschema": "tsx src/openapi/generators.ts jsonschema > schemas.json",
    "prepare": "pnpm build"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "openapi3-ts": "^4.5.0",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": "22.x"
  },
  "license": "MIT"
}

{
  "name": "@bm/validation",
  "version": "0.1.0",
  "description": "Shared runtime validation schemas and DTO contracts for Beneficio Mutuo.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "typecheck": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "test": "vitest run --coverage",
    "gen:openapi": "ts-node --esm src/openapi/index.ts > openapi.json",
    "gen:jsonschema": "ts-node --esm src/openapi/generators.ts jsonschema > schemas.json"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.1.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.12",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.18"
  },
  "license": "MIT"
}

{
  "name": "validation",
  "projectType": "library",
  "sourceRoot": "packages/validation/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "pnpm exec unbuild",
        "cwd": "packages/validation"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec unbuild --stub",
        "cwd": "packages/validation"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc -p tsconfig.json",
        "cwd": "packages/validation"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec rimraf dist",
        "cwd": "packages/validation"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "command": "pnpm exec vitest run --coverage",
        "cwd": "packages/validation"
      }
    },
    "gen-openapi": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec ts-node --esm src/openapi/index.ts > openapi.json",
        "cwd": "packages/validation"
      }
    },
    "gen-jsonschema": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec ts-node --esm src/openapi/generators.ts jsonschema > schemas.json",
        "cwd": "packages/validation"
      }
    }
  },
  "tags": ["type:library", "scope:validation"]
}

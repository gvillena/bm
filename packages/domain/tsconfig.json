{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* === NÃºcleo de build monorepo === */
    "rootDir": "src",
    "outDir": "dist",

    /* === Tipos === */
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": true,

    /* === Targets modernos === */
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",

    /* === Seguridad y compatibilidad === */
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,

    /* === Path resolution === */
    "baseUrl": ".",
    "paths": {
      "@bm/domain/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}

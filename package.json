{
  "name": "bm",
  "version": "1.0.0",
  "description": "Beneficio Mutuo Monorepo — Agreement-Centric Relationship Platform",
  "private": true,
  "packageManager": "pnpm@10.11.1",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "preflight": "node -e \"const v=process.version;if(!v.startsWith('v18')&&!v.startsWith('v20')){console.error('❌ Node 18/20 requerido');process.exit(1)}\" && pnpm -v",
    "build:ordered": "pnpm --filter @bm/domain run build && pnpm --filter @bm/policies run build && pnpm --filter @bm/runtime run build && pnpm --filter @bm/aria run build && pnpm --filter @bm/sdk run build && pnpm --filter @bm/validation run build && pnpm --filter @bm/ui run build && pnpm --filter @bm/web run build",
    "build": "turbo run build --filter=@bm/domain --filter=@bm/policies --filter=@bm/runtime --filter=@bm/aria --filter=@bm/sdk --filter=@bm/validation --filter=@bm/ui --filter=@bm/web",
    "build:bm": "pnpm run build:ordered",
    "dev:web": "pnpm --filter @bm/web dev",
    "dev": "pnpm build:ordered && pnpm --filter @bm/web dev",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "typecheck": "pnpm -r run typecheck",
    "sb:dev": "pnpm --filter @bm/storybook storybook",
    "sb:build": "pnpm --filter @bm/storybook build-storybook",
    "dev:turbo": "turbo run dev --parallel",
    "clean": "rimraf node_modules packages/**/dist apps/**/dist",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.14",
    "tsup": "^8.3.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}

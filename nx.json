{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "bm",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "namedInputs": {
    "sharedGlobals": [],
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.[jt]s?(x)",
      "!{projectRoot}/**/*.test.[jt]s?(x)",
      "!{projectRoot}/tests/**/*.spec.[jt]s?(x)",
      "!{projectRoot}/tests/**/*.test.[jt]s?(x)"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "^default"],
      "outputs": []
    },
    "test": {
      "inputs": ["default", "^default"],
      "outputs": ["{projectRoot}/coverage"],
      "dependsOn": ["^build"],
      "cache": true
    },
    "typecheck": {
      "inputs": ["default", "^default"],
      "outputs": [],
      "dependsOn": ["^typecheck"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "typecheck",
          "storybook",
          "build-storybook"
        ]
      }
    }
  },
  "plugins": ["@nx/js"]
}

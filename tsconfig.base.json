{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@bm/domain/*": ["packages/domain/src/*"],
      "@bm/policies/*": ["packages/policies/src/*"],
      "@bm/runtime/*": ["packages/runtime/src/*"],
      "@bm/aria/*": ["packages/aria/src/*"],
      "@bm/sdk/*": ["packages/sdk/src/*"],
      "@bm/validation/*": ["packages/validation/src/*"],
      "@bm/ui/*": ["packages/ui/src/*"]
    }
  }
}
